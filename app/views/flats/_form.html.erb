<div class="container d-flex justify-content-center">
  <div class="m-3 p-3 w-50 bg-light">
    <%= simple_form_for(@flat) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_night %>
      <%= f.input :number_of_guests %>
      <%= f.input :image_url %>
      <%= f.submit class:'btn btn-primary'%>
    <% end %>
  </div>
</div>
